<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin1.latihan3.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalkulator Sederhana"
        android:textSize="15pt"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="angka1"
        android:id="@+id/input1"
        android:textSize="10pt"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="angka2"
        android:id="@+id/input2"
        android:textSize="10pt"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/tambah"
        android:textSize="15pt"
        android:layout_below="@+id/input2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="15pt"
        android:id="@+id/kurang"
        android:layout_alignTop="@+id/tambah"
        android:layout_toEndOf="@+id/tambah" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="15pt"
        android:id="@+id/kali"
        android:layout_alignTop="@+id/kurang"
        android:layout_toEndOf="@+id/kurang" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="15pt"
        android:id="@+id/bagi"
        android:layout_alignTop="@+id/kali"
        android:layout_toEndOf="@+id/kali" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="15pt"
        android:id="@+id/samadengan"
        android:layout_below="@+id/kurang"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/simbol1"
        android:textSize="15pt"
        android:text=""
        android:layout_above="@+id/kurang"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hasil"
        android:textSize="15pt"
        android:id="@+id/hasil"
        android:layout_below="@+id/samadengan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/hapus"
        android:textSize="15pt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />







</RelativeLayout>
